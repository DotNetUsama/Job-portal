@page
@model Areas.Announcements.Pages.DetailsModel
@{
    ViewData["Title"] = Model.Announcement.Headline;
}

<div class="row">
    <div class="col-md-8 offset-md-2 col-sm-10 offset-sm-1">
        <div class="progress" style="height: 4px;">
            <div class="progress-bar bg-info" role="progressbar" style="width: 100%"
                 aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="form-container">
            <div class="form-head">
                <h1 class="form-head-title">@ViewData["Title"]</h1>
                <span class="form-head-details">By @Model.AutherName</span>
            </div>
            <div class="form-body">
                @Html.Raw(Model.Announcement.Content)
                <hr />
                <div class="d-flex">
                    <a asp-page="Edit"
                       asp-route-id="@Model.Announcement.Id"
                       class="btn btn-submit">
                        Edit announcement
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
