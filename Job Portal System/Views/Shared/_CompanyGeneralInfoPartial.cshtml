@model Job_Portal_System.ViewModels.Companies.CompanyGeneralViewModel

<div class="grid bc-black-2 ps-relative p16 bb @(Model.OpenedJobsNum > 0 ? "has-jobs" : "")">
    <div class="grid">
        <div class="s-avatar s-avatar__lg mr12" style="flex-shrink: 0; background-color: white">
            <a href="#">
                <img alt="" class="hmx100 wmx100" src="@Model.Logo">
            </a>
        </div>
        <div>
            <h2 class="fs-subheading job-details__spaced mb4">
                <a href="/Companies/Details?id=@Model.Id" title="@Model.Name" class="s-link">
                    @Model.Name
                </a>
            </h2>
            <div class="fs-body2 mb4">
                @if (Model.EmployeesNum.HasValue)
                {
                    <span class="d-inline-block mr4">
                        <svg class="svg-icon" width="18" height="18" viewBox="0 0 18 18">
                            <path fill="#535A60" d="M17 14c0 .44-.45 1-1 1H9a1 1 0 0 1-1-1H2c-.54 0-1-.56-1-1 0-2.63 3-4 3-4s.23-.4 0-1c-.84-.62-1.06-.59-1-3 .06-2.42 1.37-3 2.5-3s2.44.58 2.5 3c.06 2.41-.16 2.38-1 3-.23.59 0 1 0 1s1.55.71 2.42 2.09c.78-.72 1.58-1.1 1.58-1.1s.23-.4 0-1c-.84-.61-1.06-.58-1-3 .06-2.41 1.37-3 2.5-3s2.44.59 2.5 3c.05 2.42-.16 2.39-1 3-.23.6 0 1 0 1s3 1.38 3 4"></path>
                        </svg>
                        @Model.EmployeesNum.Value employees
                    </span>
                }
                @if (Model.FoundedYear.HasValue)
                {
                    <span class="d-inline-block mr4">
                        <svg aria-hidden="true" class="svg-icon" width="18" height="18" viewBox="0 0 18 18">
                            <path fill="#535A60" d="M5 5c0-1.1.9-2 2-2h4a2 2 0 0 1 2 2h1a2 2 0 0 1 2 2v6a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V7c0-1.1.9-2 2-2h1zm8 0H5h8zM7 4v1h4V4H7z"></path>
                        </svg>
                        Founded @Model.FoundedYear.Value
                    </span>
                }
                @if (!string.IsNullOrEmpty(Model.Type))
                {
                    <span class="d-inline-block mr4 tt-c">
                        <svg aria-hidden="true" class="svg-icon" width="18" height="18" viewBox="0 0 18 18">
                            <path fill="#535A60" d="M3 2v14h2v-6h3.6l.4 1h6V3H9.5L9 2z"></path>
                        </svg>
                        @Model.Type
                    </span>
                }
            </div>
            <div class="fs-body3">
                @if (Model.OpenedJobsNum == 0)
                {
                    <span class="d-inline-block -no-opened-jobs">
                        No opened jobs
                    </span>
                }
                else
                {
                    <span class="d-inline-block -opened-jobs">
                        @Model.OpenedJobsNum jobs
                    </span>
                }
                <span class="d-inline-block pl8 pr8 -departments">@(Model.DepartmentsNum == 0 ? "No" : $"{Model.DepartmentsNum}") Departments</span>
            </div>
        </div>
    </div>
</div>
