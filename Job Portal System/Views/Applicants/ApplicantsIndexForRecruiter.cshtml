@model ViewModels.Applicants.ApplicantsForRecruiterIndexViewModel
@{
    ViewData["Title"] = Model.JobVacancyTitle;
}

<div id="main-bar-full">
    <div class="g-row cv-story-wrapper mt24">
        <div class="g-col g-column cv-story">
            <header>
                <div class="ps-relative">
                    <div class="grid">
                        <div class="grid--cell fl1">
                            <h1 class="mb2 fc-black-800 fs-headline1">@Model.JobVacancyTitle <i class="fs-body2 fc-black-500">(@Model.ApplicantsCount applicants)</i></h1>
                        </div>
                    </div>
                    <div class="grid gs12 mb12">
                        <div class="grid--cell4">
                            <div class="grid ai-center gs8 mb4">
                                <div class="grid--cell fc-black-400"><i class="fa fa-briefcase"></i></div>
                                <div class="grid--cell fc-black-700 fs-body1">@Model.JobTitle</div>
                            </div>
                            @if (Model.IsRemote)
                            {
                                <div class="grid ai-center gs8 mb4">
                                    <div class="grid--cell fc-black-400">
                                        <svg aria-hidden="true" class="svg-icon" width="18" height="18" viewBox="0 0 18 18">
                                            <path d="M17.86 6.66l-1.77 1.77a10 10 0 0 0-14.14 0L.18 6.66a12.5 12.5 0 0 1 17.68 0zm-3.54 3.54l-1.76 1.77a5 5 0 0 0-7.07 0L3.72 10.2a7.5 7.5 0 0 1 10.6 0zm-3.53 3.54L9.02 15.5l-1.77-1.76a2.5 2.5 0 0 1 3.54 0z"></path>
                                        </svg>
                                    </div>
                                    <div class="grid--cell fc-black-700 fs-body1">Remote </div>
                                </div>
                            }
                            else
                            {
                                <div class="grid ai-center gs8 mb4">
                                    <div class="grid--cell fc-black-400">
                                        <svg aria-hidden="true" class="svg-icon" width="18" height="18" viewBox="0 0 18 18">
                                            <path d="M2 6.38C2 9.91 8.1 17.7 8.1 17.7c.22.29.58.29.8 0 0 0 6.1-7.8 6.1-11.32A6.44 6.44 0 0 0 8.5 0 6.44 6.44 0 0 0 2 6.38zm9.25.12a2.75 2.75 0 1 1-5.5 0 2.75 2.75 0 0 1 5.5 0z"></path>
                                        </svg>
                                    </div>
                                    <div class="grid--cell fc-black-700 fs-body1">@Model.Location</div>
                                </div>
                            }
                        </div>
                    </div>
                    <partial name="_JobVacancyStatusPartial" model="@Model.Status" />
                </div>
            </header>
            <div id="qlist-wrapper" class="flush-left">
                <partial name="_ApplicantsForRecruiterGroupPartial" model="@Model.Applicants" />
            </div>
        </div>
        @await Component.InvokeAsync("JobVacancyActions", new { jobVacancyId = Model.JobVacancyId, user = User, side = true })
    </div>
</div>
